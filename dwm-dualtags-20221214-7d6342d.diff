From: George <georgij.minarskij@proton.me>
Date: Wed, 14 Dec 2022 17:42:33 +0100
Subject: [PATCH] A similar patch to blanktags, but user can moify config file
 to either use regular tags, or custom empty/active tag names. Size will be
 adjusted. 

---
 config.def.h |  2 ++
 dwm.c        | 19 +++++++++++++------
 2 files changed, 15 insertions(+), 6 deletions(-)

diff --git a/config.def.h b/config.def.h
index 9efa774..2d1798a 100644
--- a/config.def.h
+++ b/config.def.h
@@ -20,6 +20,8 @@ static const char *colors[][3]      = {
 
 /* tagging */
 static const char *tags[] = { "1", "2", "3", "4", "5", "6", "7", "8", "9" };
+static const char *dualtags[] = { "ﱣ", "ﱤ" };  /* 1st - active, 2nd - empty */
+static const int useTags = 0;   /* 1 - tags, 0 - circles */
 
 static const Rule rules[] = {
 	/* xprop(1):
diff --git a/dwm.c b/dwm.c
index 03baf42..c7abaa4 100644
--- a/dwm.c
+++ b/dwm.c
@@ -703,6 +703,7 @@ drawbar(Monitor *m)
 	int boxs = drw->fonts->h / 9;
 	int boxw = drw->fonts->h / 6 + 2;
 	unsigned int i, occ = 0, urg = 0;
+	const char *tagsymbol = NULL;
 	Client *c;
 
 	if (!m->showbar)
@@ -722,13 +723,19 @@ drawbar(Monitor *m)
 	}
 	x = 0;
 	for (i = 0; i < LENGTH(tags); i++) {
-		w = TEXTW(tags[i]);
 		drw_setscheme(drw, scheme[m->tagset[m->seltags] & 1 << i ? SchemeSel : SchemeNorm]);
-		drw_text(drw, x, 0, w, bh, lrpad / 2, tags[i], urg & 1 << i);
-		if (occ & 1 << i)
-			drw_rect(drw, x + boxs, boxs, boxw, boxw,
-				m == selmon && selmon->sel && selmon->sel->tags & 1 << i,
-				urg & 1 << i);
+		if (useTags) {
+			w = TEXTW(tags[i]);
+			drw_text(drw, x, 0, w, bh, lrpad / 2, tags[i], urg & 1 << i);
+			if (occ & 1 << i)
+				drw_rect(drw, x + boxs, boxs, boxw, boxw,
+					m == selmon && selmon->sel && selmon->sel->tags & 1 << i,
+					urg & 1 << i);
+		} else {
+			tagsymbol = dualtags[(occ & 1 << i) ? 0 : 1];
+			w = TEXTW(tagsymbol);
+			drw_text(drw, x, 0, w, bh, lrpad / 2, tagsymbol, urg & 1 << i);
+		}
 		x += w;
 	}
 	w = TEXTW(m->ltsymbol);
